{
  "name": "agentic-pm",
  "version": "1.0.0",
  "description": "Agentic Project Management CLI",
  "scripts": {
    "build": "npm run build:release && npm run build:website",
    "build:release": "node build/index.js",
    "build:website": "cd website && npm run build",
    "start:website": "cd website && npm run start",
    "test": "vitest run --reporter=basic",
    "test:watch": "vitest",
    "deploy:website": "cd website && npm run deploy"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/sdi2200262/agentic-project-management.git"
  },
  "keywords": [
    "agentic",
    "project-management",
    "cli",
    "apm"
  ],
  "author": "CobuterMan <haidemenoss@gmail.com>",
  "contributors": [],
  "license": "MPL-2.0",
  "type": "module",
  "bin": {
    "apm": "src/index.js",
    "agentic-pm": "src/index.js"
  },
  "bugs": {
    "url": "https://github.com/sdi2200262/agentic-project-management/issues"
  },
  "homepage": "https://github.com/sdi2200262/agentic-project-management#readme",
  "engines": {
    "node": ">=18"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@inquirer/prompts": "^7.9.0",
    "adm-zip": "^0.5.16",
    "axios": "^1.12.2",
    "chalk": "^5.6.2",
    "commander": "^11.1.0",
    "fs-extra": "^11.2.0",
    "js-yaml": "^4.1.0"
  },
  "devDependencies": {
    "archiver": "^7.0.1",
    "vitest": "^2.1.3"
  }
}
